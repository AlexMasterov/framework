{
    "name": "sparkphp/spark",
    "description": "A tiny framework that can start anything.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=5.5.0",
        "aura/payload": "3.*@dev",
        "monolog/monolog": "~1.13",
        "nikic/fast-route": "0.4.*",
        "rdlowrey/auryn": "0.15.*",
        "sparkphp/adr": "dev-master",
        "zendframework/zend-diactoros": "~1.0",
        "relay/relay": "~1.0",
        "relay/middleware": "~1.0",
        "arbiter/arbiter": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.6",
        "satooshi/php-coveralls": "0.6.1"
    },
    "suggest": {
        "josegonzalez/dotenv": "For environment based configuration loading"
    },
    "autoload": {
        "psr-4": {
            "Spark\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SparkTests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Woody Gilk",
            "email": "hello@shadowhand.me"
        },
        {
            "name": "Daniel Olfelt",
            "email": "dolfelt@gmail.com"
        }
    ],
    "minimum-stability": "dev"
}

{
    "name": "sparkphp/spark",
    "description": "A tiny framework that can start anything.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Woody Gilk",
            "email": "hello@shadowhand.me"
        },
        {
            "name": "Daniel Olfelt",
            "email": "dolfelt@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "arbiter/arbiter": "^0.1",
        "destrukt/destrukt": "^0.7",
        "filp/whoops": "^1.1",
        "nikic/fast-route": "^0.7",
        "rdlowrey/auryn": "^1.1",
        "relay/relay": "^1.1",
        "relay/middleware": "^0.1",
        "sparkphp/adr": "^0.4",
        "willdurand/negotiation": "^2.0",
        "zendframework/zend-diactoros": "^1.0.4"
    },
    "require-dev": {
        "josegonzalez/dotenv": "^1.2",
        "league/plates": "^3.1",
        "phpunit/phpunit": "^4.8|^5.0",
        "satooshi/php-coveralls": "^1.0"
    },
    "suggest": {
        "josegonzalez/dotenv": "For environment based configuration loading",
        "league/plates": "For simple HTML templates written in PHP"
    },
    "autoload": {
        "psr-4": {
            "Spark\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SparkTests\\": "tests/"
        }
    }
}

{
    "name": "sparkphp/spark",
    "description": "A tiny framework that can start anything.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Woody Gilk",
            "email": "hello@shadowhand.me"
        },
        {
            "name": "Daniel Olfelt",
            "email": "dolfelt@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.5.0",
        "aura/payload": "~3.0",
        "monolog/monolog": "~1.16",
        "nikic/fast-route": "~0.6",
        "rdlowrey/auryn": "~1.0",
        "sparkphp/adr": "~0.1.0",
        "zendframework/zend-diactoros": "~1.0",
        "relay/relay": "~1.0",
        "relay/middleware": "~1.0",
        "arbiter/arbiter": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8",
        "satooshi/php-coveralls": "~0.6"
    },
    "suggest": {
        "josegonzalez/dotenv": "For environment based configuration loading",
        "league/plates": "For simple HTML templates written in PHP"
    },
    "autoload": {
        "psr-4": {
            "Spark\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SparkTests\\": "tests/"
        }
    }
}
